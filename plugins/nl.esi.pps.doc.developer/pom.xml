<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.esi.pps</groupId>
        <artifactId>nl.esi.pps.root</artifactId>
        <version>0.30.0-SNAPSHOT</version>
        <relativePath>../../</relativePath>
    </parent>

    <artifactId>nl.esi.pps.doc.developer</artifactId>
    <packaging>eclipse-plugin</packaging>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-meta-model-diagrams</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/meta-models</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../nl.esi.emf.properties/model</directory>
                                    <include>*.png</include>
                                </resource>
                                <resource>
                                    <directory>../nl.esi.pps.architecture/model</directory>
                                    <include>*.png</include>
                                </resource>
                                <resource>
                                    <directory>../nl.esi.pps.tmsc/model</directory>
                                    <include>*.png</include>
                                </resource>
                                <resource>
                                    <directory>../nl.esi.pps.tmsc.metric/model</directory>
                                    <include>*.png</include>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.altran.general.emf.ecoredoc</groupId>
                <artifactId>ecoredoc-maven-plugin</artifactId>
                <version>0.10.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>ecoredoc</goal>
                        </goals>
                        <configuration>
                            <resolve>true</resolve>
                            <config>
                                <documentTitle>PPS meta-models</documentTitle>
                                <renderDefaults>false</renderDefaults>
                                <repeatInherited>false</repeatInherited>
                            </config>
                            <inputFiles>
                                <inputFile>../nl.esi.emf.properties/model/properties.ecore</inputFile>
                                <inputFile>../nl.esi.pps.architecture/model/architecture.ecore</inputFile>
                                <inputFile>../nl.esi.pps.tmsc/model/tmsc.ecore</inputFile>
                                <inputFile>../nl.esi.pps.tmsc.metric/model/metric.ecore</inputFile>
                            </inputFiles>
                            <outputFile>${project.build.directory}/adoc-gen/ecore-documentation.adoc</outputFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.asciidoctor</groupId>
                <artifactId>asciidoctor-maven-plugin</artifactId>
                <configuration>
                    <!-- Attributes common to all output formats -->
                    <sourceDirectory>adoc</sourceDirectory>
                    <attributes>
                        <last-update-label>false</last-update-label>
                        <sectnumlevels>4</sectnumlevels>
                        <toclevels>4</toclevels>
                        <doctype>book</doctype>
                        <icons>font</icons>
                        <eclipse-help-location>https://help.eclipse.org/2024-09/topic</eclipse-help-location>
                    </attributes>
                </configuration>

                <executions>
                    <!-- Rendering the Eclipse Help pages -->
                    <execution>
                        <id>generate-eclipse-help</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>process-asciidoc</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/eclipse-help</outputDirectory>
                            <backend>html5</backend>
                            <attributes>
                                <imagesdir />
                                <imgsdir>../../images</imgsdir>
                                <metamodelsdir>../meta-models</metamodelsdir>
                                <!-- Using a cleaner skin, see https://github.com/darshandsoni/asciidoctor-skins#usage -->
                                <stylesdir>${project.basedir}/css</stylesdir>
                                <stylesheet>adoc-foundation.css</stylesheet>
                                <output-html />
                                <output-eclipse-help />
                                <eclipse-help-location>/help/topic</eclipse-help-location>
                            </attributes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.bsiag.geneclipsetoc</groupId>
                <artifactId>geneclipsetoc-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>geneclipsetoc</goal>
                        </goals>
                        <configuration>
                            <outputTocFile>${project.build.directory}/eclipse-help/toc.xml</outputTocFile>
                            <sourceFolder>${basedir}</sourceFolder>
                            <pages>
                                <page>target/eclipse-help/index.html</page>
                            </pages>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Package the Eclipse Help contents -->
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-packaging-plugin</artifactId>
                <configuration>
                    <additionalFileSets>
                        <fileSet>
                            <!-- Putting it in the same dir within the jar ensures us that doc will work in runtime instance and RCP -->
                            <prefix>target/eclipse-help/</prefix>
                            <directory>${project.build.directory}/eclipse-help/</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileSet>
                        <fileSet>
                            <!-- Putting it in the same dir within the jar ensures us that doc will work in runtime instance and RCP -->
                            <prefix>target/meta-models/</prefix>
                            <directory>${project.build.directory}/meta-models/</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileSet>
                    </additionalFileSets>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>