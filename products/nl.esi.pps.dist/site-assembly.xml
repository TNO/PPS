<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${basedir}/../../plugins</directory>
      <includes>
        <include>nl.esi.pps.tmsc.reconstruct*/**</include>
      </includes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>**/.META-INF_MANIFEST.MF</exclude>
        <exclude>**/.polyglot..META-INF_MANIFEST.MF</exclude>
      </excludes>
      <outputDirectory>examples</outputDirectory>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>${basedir}/../../plugins/nl.esi.pps.doc.developer/target/site/pps-developer-guide.pdf</source>
      <outputDirectory />
    </file>
    <file>
      <source>${basedir}/../../plugins/nl.esi.pps.doc.user/target/site/pps-user-guide.pdf</source>
      <outputDirectory />
    </file>
  </files>

  <dependencySets>
    <dependencySet>
      <includes>
        <include>com.asml.tipps:nl.esi.pps.product</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>